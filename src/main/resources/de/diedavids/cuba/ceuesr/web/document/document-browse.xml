<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window" xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        xmlns:cuba="http://schemas.haulmont.com/cuba/screen/compatibility"
        caption="msg://browseCaption"
        focusComponent="documentsTable"
>
    <data readOnly="true">
        <collection id="documentsDc"
                    class="de.diedavids.cuba.ceuesr.entity.Document"
                    fetchPlan="_local">
            <loader id="documentsDl">
                <query>
                    <![CDATA[select e from ceuesr_Document e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="documentsTable"
            spacing="true">
        <cuba:cubaFilter id="filter"
                         applyTo="documentsTable"
                         dataLoader="documentsDl">
            <properties include=".*"/>
        </cuba:cubaFilter>
        <groupTable id="documentsTable"
                    width="100%"
                    dataContainer="documentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excel" type="excelExport"/>
                <action id="migrateToJmix" caption="msg://migrateToJmix"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="refersTo"/>
                <column id="refersToJmix"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="documentsTable.create"/>
                <button id="editBtn" action="documentsTable.edit"/>
                <button id="removeBtn" action="documentsTable.remove"/>
                <button id="excelBtn" action="documentsTable.excel"/>
                <button id="convertToJmixBtn" action="documentsTable.migrateToJmix"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
    <facets>
        <dynattr:dynamicAttributes/>
    </facets>
</window>
